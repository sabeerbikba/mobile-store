{
  "compilerOptions": {
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowJs": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "include": ["src", "**/*.ts", "**/*.tsx", "**/*.d.ts"]
}
